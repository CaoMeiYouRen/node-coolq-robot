{
    "name": "coolq-robot",
    "version": "1.0.3",
    "description": "基于http-api、cq-websocket、cq-robot的酷Q机器人封装",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist && tsc && gulp copy",
        "dev": "gulp copy && tsc -w",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --fix",
        "lint:create": "eslint --init",
        "test": "mocha -r ts-node/register test/**/*.test.ts -R nyan",
        "rm": "rimraf node_modules",
        "start": "npm run build && nodemon dist",
        "doc": "rimraf doc && gulp typedoc",
        "mit": "git add . && git cz && git push",
        "cglog": "conventional-changelog -p angular -i CHANGELOG.md -s -p"
    },
    "author": "CaoMeiYouRen",
    "license": "MIT",
    "dependencies": {
        "cq-robot": "^1",
        "cq-websocket": "^2.0.2",
        "json5": "^2.1.0",
        "log4js": "^4.4.0",
        "moment": "^2.24.0",
        "pm2": "^4.4.0",
        "ts-node": "^8.3.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/json5": "^0.0.30",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.10",
        "@typescript-eslint/eslint-plugin": "^1.11.0",
        "@typescript-eslint/parser": "^1.11.0",
        "babel-eslint": "^10.0.2",
        "chai": "^4.2.0",
        "conventional-changelog-cli": "^2.0.21",
        "cz-conventional-changelog": "^3.0.2",
        "eslint": "^5.16.0",
        "eslint-utils": "^1.4.1",
        "eslint-config-alloy": "^2.0.4",
        "eslint-plugin-typescript": "^0.14.0",
        "gulp": "^4.0.2",
        "gulp-typedoc": "^2.2.2",
        "json5": "^2.1.0",
        "mocha": "^6.1.4",
        "nodemon": "^1.19.1",
        "nyc": "^14.1.1",
        "rimraf": "^2.6.3",
        "should": "^13.2.3",
        "typedoc": "^0.14.2",
        "typedoc-plugin-markdown": "^2.0.11",
        "typescript": "^3.5.2",
        "typescript-eslint-parser": "^22.0.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
